#:import random random

<ScatterTextWidget>:
    orientation: 'vertical'
    TextInput:
        id: my_textinput
        font_size: 15
        size_hint_y: None
        height: 200
        text: 'default'
        on_text: root.change_text(my_textinput.text)
    FloatLayout:
        Scatter:
            Label: 
                id: my_label
                text: my_textinput.text
                font_size: 15
                color: root.text_color
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 150
        Label:
            id: label1
            text: my_textinput.text
            font_size: 15
            color: root.text_color
        Label:
            id: label2
            text: my_textinput.text
            font_size: 15
            color: root.text_color
            